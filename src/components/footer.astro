---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "mailto:robert@rochadrums.com?subject=rochadrums request",
    description: "robert@rochadrums.com",
    icon: "mdi:email",
  },
  {
    url: "https://www.instagram.com/rochadrums/",
    description: "@rochadrums",
    icon: "mdi:instagram",
  },
  {
    url: "https://goo.gl/maps/z99FMN7Sd8sMS4y26",
    description: "phoenix, az",
    icon: "mdi:map-marker",
  },
];
---

<footer class="relative flex h-64 items-center justify-center">
  <div class="absolute inset-0 overflow-hidden opacity-40">
    <HeroImage />
  </div>
  <ul class="relative grid grid-cols-3 gap-4 sm:grid-cols-3">
    {
      links.map((link) => (
        <li>
          <a
            class="flex h-16 w-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
