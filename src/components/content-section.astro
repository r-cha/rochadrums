---
export interface Props {
  id: string;
  title: string;
}

const { title, id } = Astro.props;
---

<section id={id} class="flex scroll-mt-24 flex-col items-center space-y-2">
  <div class="flex flex-col items-center gap-4">
    <slot name="eyebrow" />
    <h2 class="text-center font-extrabold tracking-tight text-6xl">
      {title}
    </h2>
  </div>
  <p class="max-w-2xl text-center font-bold text-neutral-200 text-2xl">
    <slot name="lead" />
  </p>
  <slot />
</section>
