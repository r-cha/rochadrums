---
import ContentSection from "~/components/content-section.astro";
import type { ServiceItem } from "~/types";
import ServiceCard from "./service-card.astro";

const services: Array<ServiceItem> = [
  {
    title: "Lessons",
    description:
      "Develop a personalized development plan with Robert to learn the basics, refine your skills, or exchange advanced ideas. Ages 3-73!",
    icon: "mdi:handshake",
  },
  {
    title: "Live",
    description:
      "Lock down a rhythmicist you can count on. Collaborate with Robert anywhere in Phoenix for contemporary Christian worship, jazz, metalcore, or anything else.",
    icon: "mdi:amplifier",
  },
  {
    title: "Studio",
    description:
      "Get demo-quality drums within 48 hours, or work closely with Robert for full drum writing and performance on your single, EP, or album.",
    icon: "mdi:microphone",
  },
];
---

<ContentSection title="" id="services">
  <Fragment slot="lead"></Fragment>
  <ul class="grid max-w-6xl grid-cols-1 gap-4 md:grid-cols-3">
    {services.map((item) => <ServiceCard serviceItem={item} />)}
  </ul>
</ContentSection>
